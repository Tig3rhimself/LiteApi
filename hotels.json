import fetch from 'node-fetch';

export default async function handler(req, res) {
  if (req.method !== 'POST') {
    return res.status(405).json({ error: 'Method not allowed' });
  }

  const { hotelId, checkinDate, checkoutDate, occupancies } = req.body;

  try {
    const response = await fetch('https://api.liteapi.travel/v3.0/hotels/rates', {
      method: 'POST',
      headers: {
        'X-API-Key': process.env.LITEAPI_KEY,
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        hotelIds: [hotelId],
        checkin: checkinDate,
        checkout: checkoutDate,
        occupancies,
        currency: 'USD',
        guestNationality: 'US'
      }),
    });

    const data = await response.json();
    return res.status(200).json(data);
  } catch (error) {
    return res.status(500).json({ error: 'Failed to fetch LiteAPI data', details: error.message });
  }
}
